/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<div class="block-cart-top">
    <?php $_cartQty = $this->getSummaryCount() ?>
    <div class="block-content">
    <div class="actions">
        <button type="button" title="<?php echo $this->__('Checkout') ?>" class="button-small" onclick="setLocation('<?php echo $this->getCheckoutUrl() ?>')"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
    </div>
        <div class="summary">
            <?php if ($_cartQty==1): ?>
            <p class="amount">1 item: <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></p>
            <?php else: 
            	$_cartQty = $_cartQty ? $_cartQty : 0;
            ?>
            <p class="amount"><?php echo $_cartQty." items" ?>: <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></p>
            <?php endif ?>
        </div>
    </div>
</div>
